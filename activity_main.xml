<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/park_location"
        android:id="@+id/titleText"
        android:layout_gravity="center_horizontal"
        android:textSize="40sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameText"
        android:layout_marginTop="47dp"
        android:textSize="40sp"
        android:text="@string/park_name"
        android:layout_below="@+id/titleText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressText"
        android:textSize="40sp"
        android:text="@string/park_street"
        android:layout_below="@+id/nameText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stateText"
        android:text="@string/park_state"
        android:textSize="40sp"
        android:layout_below="@+id/addressText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zipText"
        android:textSize="40sp"
        android:text="@string/park_zip"
        android:layout_below="@+id/stateText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_btn"
        android:id="@+id/submitButton"
        android:layout_below="@+id/zipText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:textSize="40sp" />
</RelativeLayout>